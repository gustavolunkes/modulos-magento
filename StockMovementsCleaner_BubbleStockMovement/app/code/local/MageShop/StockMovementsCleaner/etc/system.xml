<?xml version="1.0"?>
<config>
    <sections>
        <cataloginventory>
            <groups>
                <item_options>
                    <fields>
                        <stockcleaner_enabled translate="label">
                            <label>Ativar limpeza automática de movimentações</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>999</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </stockcleaner_enabled>

                        <stockcleaner_days translate="label">
                            <label>Quantos dias manter os registros de movimentações</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-number</validate>
                            <sort_order>1000</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Ex: 30 = mantém últimos 30 dias</comment>
                        </stockcleaner_days>
                    </fields>
                </item_options>
            </groups>
        </cataloginventory>
    </sections>
</config>
