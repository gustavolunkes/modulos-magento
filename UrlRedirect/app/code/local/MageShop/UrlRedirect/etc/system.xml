<?xml version="1.0"?>
<config>
    <sections>
        <urlredirect module="urlredirect">
            <label>Redirecionamento de URL</label>
            <tab>mageshop</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <resource>admin/system/config/urlredirect</resource>

            <groups>
                <general module="urlredirect">
                    <label>Configurações</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>

                    <fields>
                        <enabled>
                            <label>Ativar Módulo</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <remove_path>
                            <label>Remover da URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </remove_path>
                        <redirect_type>
                            <label>Tipo de Redirecionamento</label>
                            <frontend_type>select</frontend_type>
                            <source_model>urlredirect/system_config_source_redirecttype</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>301 = Permanente, 302 = Temporário</comment>
                        </redirect_type>
                    </fields>
                </general>
            </groups>
        </urlredirect>
    </sections>
</config>
